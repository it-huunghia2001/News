datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Article {
  id          Int      @id @default(autoincrement())
  title       String
  slug        String   @unique
  summary     String?
  content     String?
  image       String?
    description String?  // ðŸ†• thÃªm dÃ²ng nÃ y
  link        String   @unique
  category    String
  publishedAt DateTime
  source      String?
  createdAt   DateTime @default(now())
}
